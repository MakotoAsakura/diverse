<h3 class="page-title text-center"><%= t('reset_password.new.title') %></h3>
<div class="full-height">
  <div class="container">
    <div class="change-pasword-form">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, data: { turbo: false }) do |f| %>
        <div class="form-group text-center">
          <strong><%= t('reset_password.new.text') %></strong><br>
          <strong><%= t('reset_password.new.text2') %></strong>
        </div>
        <div class="form-group">
          <div class="form-group-control">
            <%= f.email_field :email, autocomplete: "email", class: "form-control input-custom" %>
          </div>
        </div>
        <div class="form-button-group text-center mx-auto">
          <div class="form-group">
            <div class="d-grid gap-4 gap-md-5">
              <%= f.submit t('reset_password.new.button'), class: "btn btn-custom btn-primary" %>
              <%= link_to t('reset_password.new.back_to_login'), user_session_path, class: "btn btn-custom btn-primary" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
