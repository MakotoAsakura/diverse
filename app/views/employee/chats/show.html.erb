<% content_for :body_class, "no-footer" %>
<% content_for :title, t("chat.views.show.title") %>
<% content_for :title_class, "text-center text-lg-start" %>
<div class="container-fluid d-lg-none">
  <div class="form-button-group mb--8">
    <div class="form-group">
      <div class="d-grid gap-4">
        <%= link_to t("chat.views.show.buttons.back_to_index"), chats_path, class: "btn btn-custom btn-primary" %>
      </div>
    </div>
  </div>
</div>
<div class="px-3 px-lg-0">
  <div class="chat-wrapper">
    <div class="chat-content" id="chat-content">
    </div>
    <%= hidden_field_tag "sender", current_user.id %>
    <%= hidden_field_tag "room_id", @room.room_code %>
    <%= hidden_field_tag "sender_name", current_user.candidate.full_name %>
    <%= hidden_field_tag "receiver_name", @room.medical_user.full_name_manager %>
    <%= hidden_field_tag "screen", "chat" %>
    <%= hidden_field_tag "role", "candidate" %>
    <% unless @room.medical_user.user_discarded? %>
      <div class="chat-input d-flex align-items-center disable mb-3">
        <div class="chat-input-text">
          <textarea class="form-control" rows="3" id="content_chat"></textarea>
        </div>
        <div class="chat-button-send">
          <button type="submit" id="sendMsgBtn"></button>
        </div>
      </div>
    <% end %>
    <div style="height: 100px; background: #ffffff;"></div>
  </div>
</div>
