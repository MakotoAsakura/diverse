<% @crud_buttons = proc do %>
  <%= button_to admin_notification_path, method: :delete, class: "btn btn-destroy save" do %>
    <%= t("admin.notifications.confirm_delete.delete_button") %>
  <% end %>
  <%= link_to edit_admin_notification_path, class: "d-flex justify-content-center mt-1" do %>
    <button type="button" class="btn save btn-back"><%= t("base.buttons.cancel") %></button>
  <% end %>
<% end %>

<div class="container">
  <div class="form-group row align-items-center mt-3">
    <div class="col-2 fw-bolder"><%= label_tag @model.t(:title) %></div>
    <div class="col-7"><%= @item.title %></div>
  </div>

  <div class="form-group row align-items-center mt-3">
    <div class="col-2 fw-bolder"><%= label_tag @model.t(:content) %></div>
    <div class="col-7">
      <%= @item.content %>
    </div>
  </div>

  <div class="form-group row align-items-center mt-3">
    <div class="col-2 fw-bolder"><%= label_tag @model.t(:attachments) %></div>
    <div class="col-7">
      <% @item.attachments.each do |attachment| %>
        <div class="mt-3 filename"><%= link_to attachment.filename, rails_blob_path(attachment.file, disposition: 'attachment'), class: "text-decoration-underline", target: "_blank" %></div>
      <% end %>
    </div>
  </div>

  <% if @item.start_time || @item.end_time %>
    <div class="form-group row align-items-center mt-3">
      <div class="col-2 fw-bolder"><%= label_tag @model.t(:publish_time) %></div>
      <div class="col-7">
        <%= "#{@item.start_time ? l(@item.start_time, format: :long_day) : "-"}　〜　#{@item.end_time ? l(@item.end_time, format: :long_day) : "-"}"  %>
      </div>
    </div>
  <% end %>
</div>


<div class="text-center mt-5">
  <%= t("admin.notifications.confirm_delete.note1") %>
</div>

<div class="text-center mb-3 f-size-13 text-danger">
  <%= t("admin.notifications.confirm_delete.note2") %>
</div>
