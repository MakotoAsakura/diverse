<% @crud_buttons = proc do |f| %>
  <%= f.submit t("admin.users.form.button_submit"), class: "btn button btn-submit save" %>
<% end %>

<div class="container">
  <div class="row justify-content-center aligns-items-center">
    <div class="col-5 p-sm-5">
      <%= f.fields_for :candidate, @item.candidate || @item.build_candidate do |ff| %>
        <div class="form-group row mb-3">
          <label><%= t("admin.users.form.label.name") %></label>
          <div class="col">
            <%= ff.text_field :first_name, name: "item[candidate_attributes][first_name]", autofocus: true, placeholder: t("admin.users.form.label.name"), class:"form-control border-solid-light-gray-1 h-auto px-1 py-2" %>
          </div>
          <div class="col">
            <%= ff.text_field :last_name, name: "item[candidate_attributes][last_name]",autofocus: true, placeholder: t("admin.users.form.label.name"), class:"form-control border-solid-light-gray-1 h-auto px-1 py-2" %>
          </div>
        </div>
      <% end %>
      <div class="form-group mb-3">
        <%= f.label :email, t("admin.users.form.label.email") %>
        <%= f.text_field :email, autofocus: true, placeholder: t("admin.users.form.label.email"), class:"form-control border-solid-light-gray-1 h-auto px-1 py-2" %>
      </div>

      <div class="form-group mb-3">
        <%= f.label :password, t("admin.users.form.label.password") %>
        <%= f.password_field :password, class: "form-control border-solid-light-gray-1 h-auto px-1 py-2", autocomplete: false, placeholder: t("admin.users.form.label.password") %>
      </div>

      <div class="form-group mb-3">
        <%= f.label :password_confirmation, t("admin.users.form.label.password_confirmation") %><br />
        <%= f.password_field :password_confirmation, class: "form-control border-solid-light-gray-1 h-auto px-1 py-2", autocomplete: false, placeholder: t("admin.users.form.label.password_confirmation") %>
      </div>
    </div>
  </div>
</div>
