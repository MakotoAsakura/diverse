<% content_for :title, t("medical.candidate_jobs.title.show") %>
<% @crud_buttons = proc do |f| %>
<% end %>

<div class="wrap">
  <div class="title-header">
    <label class="box fw-bolder"><%= "登録内容" %></label>
  </div>
</div>

<div class="mt-3">
  <label><%= Candidate.t(:full_name) %></label>
  <div class="mt-3 ms-3">
    <%= @item.candidate.full_name %>
  </div>
</div>

<div class="mt-3">
  <label><%= Candidate.t(:name_kana) %></label>
  <div class="mt-3 ms-3">
    <%= @item.candidate.full_name_kana %>
  </div>
</div>

<div class="mt-3">
  <label><%= Candidate.t(:gender) %></label>
  <div class="mt-3 ms-3">
    <%= @item.candidate.gender_i18n.presence || "-" %>
  </div>
</div>

<div class="mt-3">
  <label><%= Candidate.t(:national) %></label>
  <div class="mt-3 ms-3">
    <%= @item.candidate.national_i18n.presence || "-" %>
  </div>
</div>

<div class="mt-3">
  <label><%= Candidate.t(:dob) %></label>
  <div class="mt-3 ms-3">
    <% if @item.candidate.dob %>
      <div class="row g-3 align-items-center">
        <div class="col-auto"><%= @item.candidate.year_of_birth %>年</div>
        <div class="col-auto"><%= @item.candidate.month_of_birth %>月</div>
        <div class="col-auto"><%= @item.candidate.day_of_birth %>日</div>
      </div>
    <% else %>
      -
    <% end %>
  </div>
</div>

<div class="mt-3">
  <label><%= Candidate.t(:zipcode) %></label>
  <div class="mt-3 ms-3">
    <%= display_zipcode(@item.candidate.zipcode) %>
  </div>
</div>

<div class="mt-3">
  <label><%= Candidate.t(:prefecture) %></label>
  <div class="mt-3 ms-3">
    <%= @item.candidate.prefecture.presence || "-" %>
  </div>
</div>

<div class="mt-3">
  <label><%= Candidate.t(:city) %></label>
  <div class="mt-3 ms-3">
    <%= @item.candidate.city.presence || "-" %>
  </div>
</div>

<div class="mt-3">
  <label><%= Candidate.t(:address) %></label>
  <div class="mt-3 ms-3">
    <%= @item.candidate.address.presence || "-" %>
  </div>
</div>

<div class="mt-3">
  <label><%= Candidate.t(:phone_number) %></label>
  <div class="mt-3 ms-3">
    <%= display_phone_number(@item.candidate.phone_number) %>
  </div>
</div>

<div class="mt-3">
  <label><%= User.t(:email) %></label>
  <div class="mt-3 ms-3">
    <%= @item.candidate.user.email %>
  </div>
</div>
