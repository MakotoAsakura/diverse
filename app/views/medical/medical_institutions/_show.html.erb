<% @crud_buttons = proc do |f| %>
  <%= link_to "Edit", edit_medical_medical_institution_path(@item), class: "btn btn-secondary" %>
  <%= link_to "Delete", medical_medical_institution_path(@item), method: :delete, class: "btn btn-danger", data: { confirm: 'Are you sure?' } %>
<% end %>

<div class="wrap">
  <div class="title-header">
    <label class="box"><%= I18n.t("helpers.label.medical_institution.registered_content") %></label>
  </div>
</div>

<div class="mt-3">
  <label class="fw-bolder"><%= @model.t(:name) %></label>
  <div class="color-light-gray">
    <%= @item.name %>
  </div>
</div>

<div class="mt-3">
  <label class="fw-bolder"><%= @model.t(:name_kana) %></label>
  <div class="color-light-gray">
    <%= @item.name_kana %>
  </div>
</div>

<div class="mt-3">
  <label class="fw-bolder"><%= @model.t(:phone_number) %></label>
  <div class="color-light-gray">
    <%= display_phone_number(@item.phone_number) %>
  </div>
</div>

<div class="mt-3">
  <label class="fw-bolder"><%= @model.t(:url) %></label>
  <div class="color-light-gray">
    <%= @item.url %>
  </div>
</div>

<div class="mt-3">
  <label class="fw-bolder"><%= @model.t(:location) %></label>
  <div class="color-light-gray">
    <%= display_zipcode(@item.zipcode) %><br>
    <%= @item.location %>
  </div>
</div>

<div class="mt-3">
  <label class="fw-bolder"><%= @model.t(:full_name_manager) %></label>
  <div class="color-light-gray">
    <%= @item.full_name_manager %>
  </div>
</div>

<div class="mt-3">
  <label class="fw-bolder"><%= @model.t(:full_name_kana_manager) %></label>
  <div class="color-light-gray">
    <%= @item.full_name_kana_manager %>
  </div>
</div>

<div class="mt-3">
  <label class="fw-bolder"><%= User.t(:email) %></label>
  <div class="color-light-gray">
    <%= @item.user.email %>
  </div>
</div>

<div class="wrap mt-3">
  <div class="title-header">
    <label class="box"><%= I18n.t("helpers.label.medical_institution.pharmaceutical_company") %></label>
  </div>
</div>

<div class="mt-3">
  <label class="fw-bolder"><%= PharmaceuticalCompany.t(:name) %></label>
  <div class="color-light-gray">
    <%= @item.pharmaceutical_company.name %>
  </div>
</div>

<div class="mt-3">
  <label class="fw-bolder"><%= PharmaceuticalCompany.t(:staff_ms) %></label>
  <div class="color-light-gray">
    <%= @item.pharmaceutical_company.staff_ms %>
  </div>
</div>
