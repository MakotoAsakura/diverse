<% content_for :title, t("employee.contacts.confirm.title") %>
<% content_for :title_class, "page-title text-center" %>
<% @crud_buttons = proc {} %>

<% @crud_buttons = proc do %>
<% end %>

<div class="container">
  <div class="confirm-contact-form">
    <div class="form-highlight">
      <div class="form-group mt-5">
        <label class="form-label text-contact"><%= @model.t("name") %></label>
        <div class="form-group-control"><%= @item.name %></div>
      </div>
      <div class="form-group">
        <label class="form-label text-contact"><%= @model.t("email") %></label>
        <div class="form-group-control"><%= @item.email %></div>
      </div>
      <div class="form-group">
        <label class="form-label text-contact"><%= @model.t("title") %></label>
        <div class="form-group-control"><%= @item.title %></div>
      </div>
      <div class="form-group">
        <label class="form-label text-contact"><%= @model.t("content") %></label>
        <div class="form-group-control text-pre-line"><%= @item.content %></div>
      </div>
    </div>
    <div class="form-bottom">
      <div class="form-button-group text-center mx-auto">
        <div class="form-group">
          <div class="d-none d-lg-block mb-4">
            <div class="text-center">上記内容で送信します。よろしいですか？</div>
          </div>
          <div class="form-button-group text-center mx-auto">
            <div class="form-group">
              <div class="gap-4 gap-md-5">
                <%= f.submit t("employee.contacts.confirm.submit"), class: "btn button btn-submit btn-submit-contact" %>
                <%= link_to t("employee.contacts.confirm.back"), new_contact_path(params: { type: "back" }), class: "btn btn-primary btn-custom d-lg-none" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%= f.hidden_field :name %>
<%= f.hidden_field :email %>
<%= f.hidden_field :title %>
<%= f.hidden_field :content %>
