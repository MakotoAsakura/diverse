<%= form_for :item, url: { action: :next_step, id: @item.id }, html: { id: "item-form", multipart: true, autocomplete: :off, method: :post }, data: { turbo: false } do |f| %>
  <%= error_messages_for :item %>

  <div class="wrap">
    <%= render template: "_form", locals: { f: f } %>
  </div>

  <hr class="hr-left-80" />

  <div class="send">
    <% if @crud_buttons %>
      <% @crud_buttons.call f %>
    <% else %>
      <%= f.submit t("base.buttons.save"), class: "btn button btn-save", data: { disable_with: t("base.buttons.saving") } %>
    <% end %>
  </div>
<% end %>
