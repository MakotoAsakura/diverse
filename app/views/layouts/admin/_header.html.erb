<div class="wrap row align-items-end">
  <div class="application-icon col-2">
    <%= link_to admin_root_path do %>
      <i class="icon"><%= image_tag("svg/application_icon.svg") %></i>
    <% end %>
  </div>
  <div class="title col-10">
    <% if yield(:title).present? %>
      <span class="text <%= yield(:title_class).presence || 'text-center' %>"><%= yield(:title) %></span>
    <% else %>
      <span class="text"><%= controller.title %></span>
    <% end %>
  </div>
</div>
