<div class="wrap row align-items-end">
  <div class="application-icon col-2">
    <%= link_to medical_root_path do %>
      <i class="icon"><%= image_tag("svg/application_icon.svg") %></i>
    <% end %>
  </div>
  <div class="col-10 ps-0">
    <div class="text-end pb-2">
      <%= link_to "お問合せ", new_medical_contact_path, class: "link-contact-form me-5" %>
      <%= link_to "よくある質問", medical_faqs_path, class: "link-faq me-3" %>
    </div>
    <div class="title">
      <% if yield(:title).present? %>
        <span class="text <%= yield(:title_class).presence || 'text-center' %>"><%= yield(:title) %></span>
      <% end %>
    </div>
  </div>
</div>
